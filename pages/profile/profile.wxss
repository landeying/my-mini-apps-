.avatar{
	background: #C81623;
	height: 300rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.userinfo-btn{   
    background: none !important;  
    color: #fff !important; 
    font-size: 40rpx;
		border:5rpx solid rgba(0,0,0,.5)		
}
.account-bg {  
    width: 100%;  
    height: 150rpx;
}

.userinfo-avatar {  
    width: 108rpx;  
    height: 108rpx;  
    border-radius: 50%;
		margin-bottom:10rpx;
}
.userinfo-nickname { 
    color: #fff;
}
.cell{
	background:#fff;
	font-size:18px;
}
.cell-item{
	display:flex;
	justify-content:space-between;
	height:100rpx;
	line-height:100rpx;
	padding:0 30rpx;
	border-bottom:1px solid #ddd;
}
.cell-item::after{
	content:'';
	width:20rpx;
	height:20rpx;
	border-top:1rpx solid #bbb;
	border-right:1rpx solid #bbb;
	transform: rotate(45deg);
	margin-top:40rpx;
}
.islogin-btn{
	width:650rpx;
	border-radius: 10rpx;
}
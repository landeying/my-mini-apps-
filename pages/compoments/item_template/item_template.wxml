<!--轮播图-->
<template name="swiper">
   <view class="slider">
        <swiper autoplay interval="3500" indicator-dots>
            <block wx:for="{{list}}" wx:key="item.id">
            <swiper-item>
                <image src="{{item.img_url}}" mode="aspectFill" lazy-load ></image>
            </swiper-item>
            </block>
        </swiper>
    </view> 
</template>

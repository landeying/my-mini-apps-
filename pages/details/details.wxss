page{
	padding-bottom:100rpx;
}
.detail-img,.goods-img{
	width:100%;
	height:600rpx;
}
.goods-sail-icon{
	width:200rpx;
	height:200rpx;
	position: relative;
	top:-200rpx;
}
.details-info>image{
		display:block;
}
.details-footer{
	display: flex;
	width:100%;
	position: fixed;
	top:93%;
	z-index:1;
}
.addCar,.buy-now{
	width:50%;
	border-radius:0;
	color:#fff;
}
.addCar{
	background: #ff9600;
}
.buy-now{
	background: #e4393c;
}
.details-info,.details-info>image{
	width:100%;
}
.detail-content,.detail-content>image{
	width:100%;
	height:800rpx;
}